{
    "manifest_version": 3,
    "name": "Facebook Post Hider",
    "version": "1.1",
    "description": "Hide all Facebook posts and show a simple button instead.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icon48.png"
      }
    },
    "permissions": ["activeTab"],
    "icons": {
      "48": "icon48.png"
    },
    "content_scripts": [
      {
        "matches": ["https://www.facebook.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }
  