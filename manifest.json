{
  "manifest_version": 3,
  "name": "Facebook Post Hider",
  "version": "2.0.3",
  "description": "Hide Facebook posts by default and display a Show Post button.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "css": ["styles.css"],
      "js": ["dist/content.js"]
    }
  ]
}
